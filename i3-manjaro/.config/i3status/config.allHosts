order += "memory"
order += "tztime local"








memory {
				format = " %used / %available"
				threshold_degraded = "1G"
				format_degraded = "MEMORY < %available"
}

tztime local {
				# https://www.cyberciti.biz/faq/linux-unix-formatting-dates-for-display/
				# format = "%Y-%m-%d %H:%M:%S"
				format = " %a %-d %b %H:%M "
}
