# DESKTOP NOTIFICATIONS BY DUNST
# bindsym $mod+Shift+d --release exec --no-startup-id "killall dunst; exec notify-send 'restart dunst'"
# bindsym Mod4+space --release exec dunstctl close
# bindsym Mod4+space --release exec dunstctl history
bindsym Mod4+n mode "$mode_notifications"
set $mode_notifications (c)lose, (C)lose all, (h)istory, conte(x)t, dnd o(n), dnd (o)ff
mode "$mode_notifications" {
		bindsym c --release exec --no-startup-id dunstctl close, mode "default"
		bindsym Shift+c --release exec --no-startup-id dunstctl close-all, mode "default"
		bindsym h --release exec --no-startup-id dunstctl history-pop, mode "default"
		bindsym x --release exec --no-startup-id dunstctl context, mode "default"
		bindsym n --release exec --no-startup-id notify-send 'do not disturb on' && ~/.config/dunst/dnd.sh dnd_start, mode "default"
		bindsym o --release exec --no-startup-id notify-send 'do not disturb off' && ~/.config/dunst/dnd.sh dnd_stop, mode "default"

		# exit system mode: "Enter" or "Escape"
		bindsym Return mode "default"
		bindsym Escape mode "default"
}
exec --no-startup-id dunstctl rule dnd disable

