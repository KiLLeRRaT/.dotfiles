# Controlling media
bindsym $mod+m mode "$mode_playerctl"
set $mode_playerctl (h) prev, (j) play/stop, (k) stop, (l) next
mode "$mode_playerctl" {
		bindsym h exec --no-startup-id playerctl previous, mode "default"
		bindsym j exec --no-startup-id playerctl play-pause, mode "default"
		bindsym k exec --no-startup-id playerctl stop, mode "default"
		bindsym l exec --no-startup-id playerctl next, mode "default"
		bindsym Return mode "default"
		bindsym Escape mode "default"
}

# NESTED i3
bindsym $mod+F12 mode "passthrough"
mode passthrough {
    bindsym $mod+F12 mode "default"
}

# exec --no-startup-id i3-msg 'workspace $ws8; exec brave --profile-directory=Profile\ 1'
# bind $mod+g to a mode "goto".
# In goto mode, m will switch to workspace 0, and launch brave with profile 1 using the url in the
# clipboard
bindsym $mod+g mode "$mode_goto"
set $mode_goto (m)eeting specific, (M)eeting Google, (p)aste, (P)aste
mode  "$mode_goto" {
		bindsym m exec --no-startup-id i3-msg workspace $ws0, exec brave --new-window --profile-directory=Profile\ 1 "$(xclip -o)", mode "default"
		bindsym Shift+m exec --no-startup-id i3-msg workspace $ws0, exec brave --new-window --profile-directory=Profile\ 1 "https://meet.google.com", mode "default"
		bindsym Shift+p exec --no-startup-id xclip -o | xclip -selection clipboard, mode "default", exec xdotool key ctrl+v
		bindsym p exec --no-startup-id xclip -o | xclip -selection clipboard, mode "default"
		bindsym Return mode "default"
		bindsym Escape mode "default"
}



