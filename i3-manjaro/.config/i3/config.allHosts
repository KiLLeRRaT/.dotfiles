# i3 config file (v4)
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

# Set mod key (Mod1=<Alt>, Mod4=<Super>)
# set $mod Mod1
set $mod Mod4

# MAKE CAPSLOCK A CTRL KEY, AND TERMINATE X WITH CTRL+ALT+BACKSPACE
exec_always --no-startup-id setxkbmap -option ctrl:nocaps -option "terminate:ctrl_alt_bksp"
exec --no-startup-id xinput set-prop 12 "libinput Scroll Method Enabled" 0, 0, 1

# set default desktop layout (default is tiling)
# workspace_layout tabbed <stacking|tabbed>

# Configure border style <normal|1pixel|pixel xx|none|pixel>
default_border pixel 1
default_floating_border normal

# Hide borders
hide_edge_borders none

# change borders
bindsym $mod+Ctrl+u border none
bindsym $mod+Ctrl+y border pixel 1
bindsym $mod+Ctrl+n border normal


# Use Mouse+$mod to drag floating windows
floating_modifier $mod

# start a terminal
# bindsym $mod+Return exec terminal
bindsym $mod+Return exec --no-startup-id alacritty

# kill focused window
bindsym $mod+Shift+q kill

# start program launcher
# bindsym $mod+d exec --no-startup-id dmenu_recency
# FROM DRACULA THEME
# bindsym $mod+d exec "dmenu_recency -nf '#F8F8F2' -nb '#282A36' -sb '#6272A4' -sf '#F8F8F2' -fn 'monospace-10' -p 'dmenu%'"
bindsym $mod+d exec --no-startup-id "dmenu_recency -i -nf '#F8F8F2' -nb '#282A36' -sb '#6272A4' -sf '#F8F8F2'"

# launch categorized menu
bindsym $mod+z exec --no-startup-id morc_menu

